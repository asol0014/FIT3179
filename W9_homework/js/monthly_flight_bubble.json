{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "highlight_in",
      "select": {"type": "point", "fields": ["Acm_binned"], "on": "mouseover",  "clear":"mouseout"},
      "bind": "legend"
    },
    {
      "name": "highlight_out",
      "select": {"type": "point", "fields": ["Acm_binned"], "on": "mouseover", "clear":"mouseout"},
      "bind": "legend"
    },
    {
      "name": "airport_selection",
      "value": "All Australian Airports",
      "bind": {
        "input": "select",
        "options": [
            "Adelaide",
            "Alice Springs",
            "Ballina",
            "Brisbane",
            "Cairns",
            "Canberra",
            "Darwin",
            "Gold Coast",
            "Hamilton Island",
            "Hobart",
            "Karratha",
            "Launceston",
            "Mackay",
            "Melbourne",
            "Newcastle",
            "Perth",
            "Proserpine",
            "Rockhampton",
            "Sunshine Coast",
            "Sydney",
            "Townsville",
            "All Australian Airports"
          ],
        "labels": [
            "Adelaide",
            "Alice Springs",
            "Ballina",
            "Brisbane",
            "Cairns",
            "Canberra",
            "Darwin",
            "Gold Coast",
            "Hamilton Island",
            "Hobart",
            "Karratha",
            "Launceston",
            "Mackay",
            "Melbourne",
            "Newcastle",
            "Perth",
            "Proserpine",
            "Rockhampton",
            "Sunshine Coast",
            "Sydney",
            "Townsville",
            "All Australian Airports"
          ],
        "name": "Select Airport: "
      }
    }
  ],

  "vconcat":[
    {
      "title": "Number of Planes Arriving",
      "data": { "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/monthly_flights_in.csv"},
      "transform": [
        {"filter": "datum.Year >= 1990"},
        {"filter": "datum.AIRPORT == airport_selection"},
        {"filter": "datum.Acm_In > 0"},
        {"bin": {"maxbins": 10}, "field": "Acm_In", "as": "Acm_binned"}
      ],
      "mark": "rect",
      "encoding": {
        "opacity": {
          "condition": {"param": "highlight_in", "value": 1},
          "value": 0.8
        },
        
        "y": {
          "field": "Month",
          "type": "ordinal",
          "timeUnit": "month",
          "axis": {"title": "Month"}
        },
        "x": {
          "field": "Year",
          "type": "ordinal",
          "timeUnit": "year",
          "axis": {"title": "Year"}

        },
        "color": {
          "field": "Acm_binned",
          "type": "ordinal",
          "scale": {
            "scheme": "goldorange"},
          "legend": {
            "title": "Number of Planes",
            "format": ","
          }
        },
        "tooltip": [
          {"field": "Month", "type": "temporal", "format": "%B"},
          {"field": "Year", "type": "temporal", "format": "%Y"},
          {"field": "Dom_Acm_In", "aggregate": "sum", "title": "Domestic Arrivals", "format":","},
          {"field": "Int_Acm_In", "aggregate": "sum", "title": "International Arrivals", "format":","},
          {"field": "Acm_In", "aggregate": "sum", "title": "Total Arrivals", "format":","}
        ]
      }
    },
    {
      "title": "Number of Planes Departing",
      "data": { "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/monthly_flights_out.csv"},
      "transform": [
        {"filter": "datum.Year >= 1990"},
        {"filter": "datum.AIRPORT == airport_selection"},
        {"filter": "datum.Acm_Out > 0"},
        {"bin": {"maxbins": 10}, "field": "Acm_Out", "as": "Acm_binned"}
      ],
      "mark": "rect",
      "encoding": {
        "opacity": {
          "condition": {"param": "highlight_out", "value": 1},
          "value": 0.8
        },
        "y": {
          "field": "Month",
          "type": "ordinal",
          "timeUnit": "month",
          "axis": {"title": "Month"}
        },
        "x": {
          "field": "Year",
          "type": "ordinal",
          "timeUnit": "year",
          "axis": {"title": "Year"}
        },
        "color": {
          "field": "Acm_binned",
          "type": "ordinal",
          "scale": {
            "scheme": "goldorange"
            },
          "legend": {
            "title": "Number of Planes",
            "format": ","
          }
        },
        
        "tooltip": [
          {"field": "Month", "type": "temporal", "format": "%B"},
          {"field": "Year", "type": "temporal", "format": "%Y"},
          {"field": "Dom_Acm_Out", "aggregate": "sum", "title": "Domestic Departures", "format":","},
          {"field": "Int_Acm_Out", "aggregate": "sum", "title": "International Departures", "format":","},
          {"field": "Acm_Out", "aggregate": "sum", "title": "Total Departures", "format":","}
        ]
      }
    }
  ],
  "config": {
    "title": {
    "fontSize": 16
  },
    "legend": {
      "symbolDirection": "horizontal",
      "orient": "bottom",
      "symbolSize": 500,
      "titleFontSize": 14,
      "labelFontSize": 12
    }
  }
}