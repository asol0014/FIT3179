{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "airport_selection",
      "value": "All Australian Airports",
      "bind": {
        "input": "select",
        "options": [
          "ADELAIDE",
          "ALICE SPRINGS",
          "BALLINA",
          "BRISBANE",
          "CAIRNS",
          "CANBERRA",
          "DARWIN",
          "GOLD COAST",
          "HAMILTON ISLAND",
          "HOBART",
          "KARRATHA",
          "LAUNCESTON",
          "MACKAY",
          "MELBOURNE",
          "NEWCASTLE",
          "PERTH",
          "PROSERPINE",
          "ROCKHAMPTON",
          "SUNSHINE COAST",
          "SYDNEY",
          "TOWNSVILLE",
          "All Australian Airports"
        ],
        "labels": [
            "Adelaide",
            "Alice Springs",
            "Ballina",
            "Brisbane",
            "Cairns",
            "Canberra",
            "Darwin",
            "Gold Coast",
            "Hamilton Island",
            "Hobart",
            "Karratha",
            "Launceston",
            "Mackay",
            "Melbourne",
            "Newcastle",
            "Perth",
            "Proserpine",
            "Rockhampton",
            "Sunshine Coast",
            "Sydney",
            "Townsville",
            "All Australian Airports"
          ],
        "name": "Select Airport: "
      }
    }
  ],

  "vconcat":[
    {
      "title": "Number of planes arriving since 1985",
      "data": { "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/monthly_flights_in.csv"},
      "transform": [
        {"filter": "datum.Year >= 1990"},
        {"filter": "datum.AIRPORT == airport_selection"},
        {"filter": "datum.Acm_In > 0"}
      ],
      "mark": "circle",
      "encoding": {
        "y": {
          "field": "Month",
          "type": "ordinal",
          "timeUnit": "month"
        },
        "x": {
          "field": "Year",
          "type": "ordinal",
          "timeUnit": "year"
        },
        "size": {
          "field": "Acm_In",
          "type": "quantitative",
          "aggregate": "sum",
          "scale": {"type": "log"}
        },
        "color": {
          "field": "Acm_In",
          "type": "quantitative",
          "aggregate": "sum",
          "scale": {
            "type": "log",
            "scheme": "magma",
            "reverse":false}
        },
        "tooltip": [
          {"field": "Month", "type": "temporal", "format": "%B"},
          {"field": "Year", "type": "temporal", "format": "%Y"},
          {"field": "Dom_Acm_In", "aggregate": "sum", "title": "Domestic Arrivals", "format":","},
          {"field": "Int_Acm_In", "aggregate": "sum", "title": "International Arrivals", "format":","},
          {"field": "Acm_In", "aggregate": "sum", "title": "Total Arrivals", "format":","}
        ]
      }
    },
  {
      "title": "Number of planes departing since 1985",
      "data": { "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/monthly_flights_out.csv"},
      "transform": [
        {"filter": "datum.Year >= 1990"},
        {"filter": "datum.AIRPORT == airport_selection"},
        {"filter": "datum.Acm_Out > 0"}
      ],
      "mark": "circle",
      "encoding": {
        "y": {
          "field": "Month",
          "type": "ordinal",
          "timeUnit": "month"
        },
        "x": {
          "field": "Year",
          "type": "ordinal",
          "timeUnit": "year"
        },
        "size": {
          "field": "Acm_Out",
          "type": "quantitative",
          "aggregate": "sum",
          "scale": {"type": "log"}
        },
        "color": {
          "field": "Acm_Out",
          "type": "quantitative",
          "aggregate": "sum",
          "scale": {
            "type": "log",
            "scheme": "yellowgreenblue"
            }
        },
        "tooltip": [
          {"field": "Month", "type": "temporal", "format": "%B"},
          {"field": "Year", "type": "temporal", "format": "%Y"},
          {"field": "Dom_Acm_Out", "aggregate": "sum", "title": "Domestic Departures", "format":","},
          {"field": "Int_Acm_Out", "aggregate": "sum", "title": "International Departures", "format":","},
          {"field": "Acm_Out", "aggregate": "sum", "title": "Total Departures", "format":","}
        ]
      }
    }
  ],
  "config": {
    "legend": {
      "symbolDirection": "horizontal",
      "orient": "bottom"
    }
  }
}
