{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height":350,
  "title": "Total Departures & Arrivals at Australian Domestic Airports",
  "config": {"font": "Helvetica"}, 
  "view": {"stroke": "transparent"},
  "projection": {"type":"mercator"},
  "layer": 
  [
    {
      "data": {
        "url":"https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/aus_states.json",
        "format":{ "type":"topojson", "feature":"aus_states"} },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke":"white"}
    },
    {
      "data": {
          "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/aircraft.csv"
        },
        "transform": [
          { "filter": {"not":{ "field": "airport", "oneOf": ["All Australian Airports"]}}},
          { "aggregate":
            [
              {"op": "sum", "field": "Dom_Acm_In", "as": "Dom_Acm_In_Sum"},
              {"op": "sum", "field": "Dom_Acm_Out", "as": "Dom_Acm_Out_Sum"},
              {"op": "sum", "field": "Dom_Acm_Total", "as": "Dom_Acm_Total_Sum"},
              {"op": "sum", "field": "Int_Acm_In", "as": "Int_Acm_In_Sum"},
              {"op": "sum", "field": "Int_Acm_Out", "as": "Int_Acm_Out_Sum"},
              {"op": "sum", "field": "Int_Acm_Total", "as": "Int_Acm_Total_Sum"},
              {"op": "sum", "field": "Acm_In", "as": "Acm_In_Sum"},
              {"op": "sum", "field": "Acm_Out", "as": "Acm_Out_Sum"},
              {"op": "sum", "field": "Acm_Total", "as": "Acm_Total_Sum"},
              {"op": "sum", "field": "Year", "as": "Year_Sum"},
              {"op": "sum", "field": "Month", "as": "Month_Sum"}
            ],
            "groupby": ["airport"]
          },
          {
            "lookup": "airport",
            "from": {
              "data": {"url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/australian_airports.csv"},
              "key": "airport",
              "fields": ["latitude", "longitude"]
            }
          }
        ],
      "mark": {"type": "circle", "opacity": 0.8, "width": 10, "tooltip": true},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "Dom_Acm_Total_Sum",
          "type": "quantitative",
          "title": "Total Flights from 1975-2025",
          "legend": null

        },
        "color": {
          "field": "Dom_Acm_Total_Sum",
          "title":"Total Flights from 1975-2025",
          "type": "quantitative",
          "scale": {
            "scheme": "tealblues"
          },
          "legend": null

        },
          "tooltip": [
            {"field": "airport", "type": "nominal", "title": "Airport"},
            {"field": "Dom_Acm_Total_Sum", "type": "quantitative", "title":"Domestic flight arrivals & depatures", "format": ",.0f"}]
      }
    }
  ]
}