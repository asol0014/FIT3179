{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#a6cee3",
  "width": "container",
  "height":400,
  "title":"Domestic Flights",
  "view": {"stroke": "transparent"},
  "projection": {"type":"mercator"},
  "layer": 
  [
    {
      "data": {
        "url":"https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/aus_states.json",
        "format":{ "type":"json"} },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke":"white"}
    },
    {
      "data": {
          "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/aircraft.csv"
        },
        "transform": [
          { "filter": {"not":{ "field": "airport", "oneOf": ["All Australian Airports"]}}},
          { "aggregate":
            [
              {"op": "sum", "field": "Dom_Acm_In", "as": "Dom_Acm_In_Sum"},
              {"op": "sum", "field": "Dom_Acm_Out", "as": "Dom_Acm_Out_Sum"},
              {"op": "sum", "field": "Dom_Acm_Total", "as": "Dom_Acm_Total_Sum"},
              {"op": "sum", "field": "Int_Acm_In", "as": "Int_Acm_In_Sum"},
              {"op": "sum", "field": "Int_Acm_Out", "as": "Int_Acm_Out_Sum"},
              {"op": "sum", "field": "Int_Acm_Total", "as": "Int_Acm_Total_Sum"},
              {"op": "sum", "field": "Acm_In", "as": "Acm_In_Sum"},
              {"op": "sum", "field": "Acm_Out", "as": "Acm_Out_Sum"},
              {"op": "sum", "field": "Acm_Total", "as": "Acm_Total_Sum"},
              {"op": "sum", "field": "Year", "as": "Year_Sum"},
              {"op": "sum", "field": "Month", "as": "Month_Sum"}
            ],
            "groupby": ["airport"]
          },
          {
            "lookup": "airport",
            "from": {
              "data": {"url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/australian_airports.csv"},
              "key": "airport",
              "fields": ["latitude", "longitude"]
            }
          }
        ],
      "mark": {"type": "circle", "opacity": 0.8, "width": 10, "tooltip": true, "color":"#ff7f00"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "Dom_Acm_Total_Sum",
          "type": "quantitative",
          "title": "Total Flights from 1975-2025",
          "legend": {"orient": "bottom"},
          "scale":{"rangeMin":100, "rangeMax":500}
        },
        
          "tooltip": [
            {"field": "airport", "type": "nominal", "title": "Airport"},
            {"field": "Dom_Acm_Total_Sum", "type": "quantitative", "title":"Domestic flight arrivals & depatures", "format": ",.0f"}]
      }
    },
    {
      "data": {
          "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/aircraft.csv"
        },
        "transform": [
          { "filter": {"not":{ "field": "airport", "oneOf": ["All Australian Airports"]}}},
          { "filter": {"not": {"field": "airport","oneOf": ["Proserpine", "Sydney", "Sunshine Coast", "Gold Coast"]}}},

          { "aggregate":
            [
              {"op": "sum", "field": "Dom_Acm_In", "as": "Dom_Acm_In_Sum"},
              {"op": "sum", "field": "Dom_Acm_Out", "as": "Dom_Acm_Out_Sum"},
              {"op": "sum", "field": "Dom_Acm_Total", "as": "Dom_Acm_Total_Sum"},
              {"op": "sum", "field": "Int_Acm_In", "as": "Int_Acm_In_Sum"},
              {"op": "sum", "field": "Int_Acm_Out", "as": "Int_Acm_Out_Sum"},
              {"op": "sum", "field": "Int_Acm_Total", "as": "Int_Acm_Total_Sum"},
              {"op": "sum", "field": "Acm_In", "as": "Acm_In_Sum"},
              {"op": "sum", "field": "Acm_Out", "as": "Acm_Out_Sum"},
              {"op": "sum", "field": "Acm_Total", "as": "Acm_Total_Sum"},
              {"op": "sum", "field": "Year", "as": "Year_Sum"},
              {"op": "sum", "field": "Month", "as": "Month_Sum"}
            ],
            "groupby": ["airport"]
          },
          {
            "lookup": "airport",
            "from": {
              "data": {"url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/australian_airports.csv"},
              "key": "airport",
              "fields": ["latitude", "longitude"]
            }
          }
        ],
      "mark": {"type": "text", "dy": 0, "dx": 30, "fontWeight": "lighter", "size": 10},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "airport", "type": "nominal"},
        "tooltip": [
          {"field": "airport", "type": "nominal", "title": "Airport"},
          {"field": "Dom_Acm_Total_Sum", "type": "quantitative", "title": "Domestic flight arrivals & depatures", "format": ","}
        ]
      }
    },
    {
      "data": {
          "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/aircraft.csv"
        },
        "transform": [
          { "filter": {"not":{ "field": "airport", "oneOf": ["All Australian Airports"]}}},
          { "filter": {"field": "airport","oneOf": ["Proserpine", "Sydney", "Sunshine Coast", "Gold Coast"]}},
          { "aggregate":
            [
              {"op": "sum", "field": "Dom_Acm_In", "as": "Dom_Acm_In_Sum"},
              {"op": "sum", "field": "Dom_Acm_Out", "as": "Dom_Acm_Out_Sum"},
              {"op": "sum", "field": "Dom_Acm_Total", "as": "Dom_Acm_Total_Sum"},
              {"op": "sum", "field": "Int_Acm_In", "as": "Int_Acm_In_Sum"},
              {"op": "sum", "field": "Int_Acm_Out", "as": "Int_Acm_Out_Sum"},
              {"op": "sum", "field": "Int_Acm_Total", "as": "Int_Acm_Total_Sum"},
              {"op": "sum", "field": "Acm_In", "as": "Acm_In_Sum"},
              {"op": "sum", "field": "Acm_Out", "as": "Acm_Out_Sum"},
              {"op": "sum", "field": "Acm_Total", "as": "Acm_Total_Sum"},
              {"op": "sum", "field": "Year", "as": "Year_Sum"},
              {"op": "sum", "field": "Month", "as": "Month_Sum"}
            ],
            "groupby": ["airport"]
          },
          {
            "lookup": "airport",
            "from": {
              "data": {"url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/australian_airports.csv"},
              "key": "airport",
              "fields": ["latitude", "longitude"]
            }
          }
        ],
      "mark": {"type": "text", "dy": 0, "dx": -30, "fontWeight": "lighter", "size": 10},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "airport", "type": "nominal"},
        "tooltip": [
          {"field": "airport", "type": "nominal", "title": "Airport"},
          {"field": "Dom_Acm_Total_Sum", "type": "quantitative", "title": "Domestic flight arrivals & depatures", "format": ","}
        ]
      }
    }
  ]
}