{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 500,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/world_countries.json",
        "format": {
          "type": "topojson",
          "feature": "world_countries"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "data/airports.csv"
      },
      "projection": {
        "type": "albersUsa"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 5},
        "color": {"value": "gray"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/country.csv"
      },
      "transform": [
        {"filter": {"field": "ADMIN", "equal": "Australia"}},
        {
          "lookup": "ADMIN",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/country_centroids.csv"
            },
            "key": "Country",
            "fields": ["Latitude", "Longitude"]
          },
          "as": ["origin_latitude", "origin_longitude"]
        },
        {
          "lookup": "Country of Stay/Residence",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/country_centroids.csv"
            },
            "key": "Country",
            "fields": ["latitude", "longitude"]
          },
          "as": ["dest_latitude", "dest_longitude"]
        }
      ],
      "projection": {"type": "albersUsa"},
      "mark": {"type": "rule", "strokeWidth": 3},
      "encoding": {
        "longitude": {"field": "origin_longitude", "type": "quantitative"},
        "latitude": {"field": "origin_latitude", "type": "quantitative"},
        "longitude2": {"field": "dest_longitude"},
        "latitude2": {"field": "dest_latitude"},
        "color": {"value": "steelblue"} 
      }
    }
  ]
}
