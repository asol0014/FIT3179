{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "title": "Incoming International Passengers",
  "config": {"font": "Helvetica"}, 
  "view": {"stroke": "null"},
  "params": [
  {
    "name": "YearParam",
    "value": "2024",
    "bind": {
      "input": "select",
      "options": ["1980", "1985", "1990", "1995", "2000", "2005", "2010", "2015", "2020", "2025"],
      "name": "Year: "
    }
  },
  {
    "name": "MonthParam",
    "value": "01",
    "bind": {
      "input": "select",
      "options": ["01", "02", "03", "04", "05", "06", "07", "08", "09", "10", "11", "12"],
      "name": "Month: "
    }
  }
],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/world_countries.json",
        "format": {
          "type": "json"
        }
      },
      "projection": {
        "type": "equalEarth",
        "rotate": [-150, 0,0]
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "darkgrey"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/country_passengers_from.csv"
      },
      "transform": [
        {"calculate": "split(datum.TIME_PERIOD, '-')[0]", "as": "Year"},
        {"calculate": "split(datum.TIME_PERIOD, '-')[1]", "as": "Month"},

        {"filter": "datum.Year == YearParam"},
        {"filter": "datum.Month == MonthParam"},
        
        {"filter": {"field": "Origin", "equal": "Australia"}},
        {"filter": "test(/other/i, datum['Country of Stay/Residence']) == false"},
        {"filter": "test(/total/i, datum['Country of Stay/Residence']) == false"},
        {"filter": "test(/not stated/i, datum['Country of Stay/Residence']) == false"},
        {"filter": "test(/UK, CIs & IOM/i, datum['Country of Stay/Residence']) == false"},

        
        {"lookup": "Origin",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/country_centroids.csv"
            },
            "key": "Country",
            "fields": ["Latitude", "Longitude"]
          },
          "as": ["origin_latitude", "origin_longitude"]
        },
        {
          "lookup": "Country of Stay/Residence",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/asol0014/FIT3179/main/W9_homework/data/country_centroids.csv"
            },
            "key": "Country",
            "fields": ["Latitude", "Longitude"]
          },
          "as": ["dest_latitude", "dest_longitude"]
        }
      ],
      "layer":[{
      "projection": {"type": "equalEarth", "rotate": [-150, 0,0]},
      "mark": {"type": "rule"},
      "encoding": {
        "longitude": {"field": "origin_longitude", "type": "quantitative"},
        "latitude": {"field": "origin_latitude", "type": "quantitative"},
        "longitude2": {"field": "dest_longitude"},
        "latitude2": {"field": "dest_latitude"},
        "tooltip": [
          {"field": "Origin", "type": "nominal", "title": "Origin Country"},
          {"field": "Country of Stay/Residence", "type": "nominal", "title": "Destination"},
          {"field": "OBS_VALUE", "type": "quantitative", "title": "Number of Passengers"},
          {"field": "TIME_PERIOD", "type": "nominal", "title": "Period"}
        ],
        "color": {
          "field": "OBS_VALUE",
          "type": "quantitative",
          "scale": {"scheme": "reds"}, 
          "title": "Number of incoming passengers"
        },
        "strokeWidth": {
          "field": "OBS_VALUE",
          "type": "quantitative",
          "scale": {"range": [1, 10]}, 
          "title": "Number of incoming passengers"
        }
      }
    },
    {
      "mark": {"type": "circle", "color": "null", "size": 10},
      "encoding": {
        "longitude": {"field": "dest_longitude", "type": "quantitative"},
        "latitude": {"field": "dest_latitude", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {
          "calculate": "toNumber(datum.OBS_VALUE)",
          "as": "OBS_VALUE_int"
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "OBS_VALUE_int", "order": "descending"}]
        },
        {
          "filter": "datum.rank <= 10"
        }
      ],
      "mark": {"type": "text", "dy": -10, "dx": 0, "fontWeight": "lighter"},
      "encoding": {
        "longitude": {"field": "dest_longitude", "type": "quantitative"},
        "latitude": {"field": "dest_latitude", "type": "quantitative"},
        "text": {"field": "Country of Stay/Residence", "type": "nominal"},
        "tooltip": [
          {"field": "Origin", "type": "nominal", "title": "Origin Country"},
          {"field": "Country of Stay/Residence", "type": "nominal", "title": "Destination"},
          {"field": "OBS_VALUE", "type": "quantitative", "title": "Number of Passengers"},
          {"field": "TIME_PERIOD", "type": "nominal", "title": "Period"}
        ]
      }
    }
    ]
  } 
  ]
}